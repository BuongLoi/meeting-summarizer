{
  "manifest_version": 3,
  "name": "Meeting Summarizer",
  "description": "Ghi âm & Tóm tắt Meeting - Upload file ghi âm, nhận transcript, tóm tắt và action items.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meeting Summarizer"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}
